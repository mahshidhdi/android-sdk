<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnalyticsTheme" parent="AppTheme">
        <item name="fontFamily">@font/signika_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="editTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="YesButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#007600</item>
        <item name="colorButtonNormal">#28d228</item>
    </style>

    <style name="NoButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#8c0000</item>
        <item name="colorButtonNormal">#ff242b</item>
    </style>

    <style name="RetryButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#0085b1</item>
        <item name="colorButtonNormal">#00a6e2</item>
    </style>

</resources>
